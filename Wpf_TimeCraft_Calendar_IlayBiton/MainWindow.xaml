<Window x:Class="Wpf_TimeCraft_Calendar_IlayBiton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_TimeCraft_Calendar_IlayBiton"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStyle="None"
        AllowsTransparency="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:NavigationBarUserControl />
        <Grid Grid.Column="1">
            <Image Source="/Media/logo-slogan.png"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="-50, -50, 0, 0" />
            <local:CloseWindowUserControl MainWindow="True" />
        </Grid>
    </Grid>
</Window>
