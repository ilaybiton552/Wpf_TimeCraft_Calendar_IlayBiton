<UserControl x:Class="Wpf_TimeCraft_Calendar_IlayBiton.DisplayCalendarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Wpf_TimeCraft_Calendar_IlayBiton"
             mc:Ignorable="d"
             d:DesignHeight="460"
             d:DesignWidth="750">
    <Grid x:Name="grid">
        <Image Source="/Media/setting.png" Margin="5" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" MouseEnter="Image_MouseEnter" />
        <Popup x:Name="popup"
               AllowsTransparency="true"
               StaysOpen="False"
               Placement="Relative"
               Width="400"/>
    </Grid>
</UserControl>
